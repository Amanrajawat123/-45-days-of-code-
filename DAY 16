Code 1:Beginner
#include <iostream>
using namespace std;

int main() {
	int n;
	cin>>n;
	for(int i=1;i<=n;i++){
	    int t,x;
	    cin>>t>>x;
	    if(t%x==0){
	       int f;
	       f=t/x;
	       if(f%2==0){
	           cout<<"YES"<<endl;
	       }
	       else{
	           cout<<"NO"<<endl;
	       }
	    }
	    else{
	        cout<<"NO"<<endl;
	    }
	}
	return 0;
}

Code 2:Intermediate
#include <iostream>
using namespace std;

int main() {
	int n;
	cin>>n;
	for(int i=1;i<=n;i++){
	    int t;
	    cin>>t;
	    cout<<1<<" "<<1<<" "<<t-2<<endl;
	}
	return 0;
}
