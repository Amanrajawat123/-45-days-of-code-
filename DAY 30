Code 1:Beginner
#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int n;
	cin>>n;
	for(int i=1;i<=n;i++){
	    int x, y, z;
	    cin>>x>>y>>z;
	    cout<<(x-y)*z<<endl;
	}
	return 0;
}

Code 2:Intermediate
#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int n;
	cin>>n;
	for(int i=1;i<=n;i++){
	    int y;
	    cin>>y;
	    if(y==0){
	        cout<<1<<endl;
	    }
	    else{
	        cout<<3*y<<endl;
	    }
	}
	return 0;
}
