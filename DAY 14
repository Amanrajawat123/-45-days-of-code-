Code 1:Beginner
#include <iostream>
using namespace std;

int main() {
	int n;
	cin>>n;
	for(int i=1;i<=n;i++){
	    int x,y;
	    cin>>x>>y;
	    for(int j=1; ; j++){
	        if(y>x){
	            cout<<x<<endl;
	            break;
	        }
	        else if(x>=y){
	            if(x%y==0){
	                cout<<x/y<<endl;
	                break;
	            }
	            else{
	                cout<<(x/y)+(x%y)<<endl;
	                break;
	            }
	        }
	    }
	}
	return 0;
}

Code 2:Intermediate

#include <iostream>
using namespace std;
int main() {
    int n;
    cin>>n;
    for(int i=1;i<=n;i++){
	int a,b,c,x,y,z;
	cin>>x>>y>>z;
	a=x+y-z;
	b=(-x)+y+z;
	c=x-y+z;
	if(a==0||b==0||c==0){
	    cout<<"yes"<<endl;
	}
	else{
	    cout<<"no"<<endl;
	}
    }
	return 0;
}
